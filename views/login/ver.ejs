<%- include("../header"); %>
<div class="col-12">
    <br>
    <h1>Listado de Clientes</h1>
	<br>
	<div class="input-group">
	   <span class="input-group-addon">Buscar &nbsp;</span>
       <input id="filtrar" type="text" class="form-control" placeholder="Ingresa el Nombre o CÃ©dula del Cliente que deseas buscar...">
	</div>
	<br>
    <a href="/clientes/agregar" class="btn btn-primary mb-2">Agregar</a>
    <table class="table table-bordered">
        <thead>
            <tr>
			    <th>Cedula</th>
                <th>Nombre</th>
				<th>Telefono</th>
				<th>Direccion</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody class="buscar">
            <% clientes.forEach(cliente => { %>
            <tr>
                <td><%= cliente.cedula %></td>
				<td><%= cliente.nombre %></td>
				<td><%= cliente.telefono %></td>
                <td><%= cliente.direccion %></td>
                <td>
                    <a href="/clientes/editar/<%= cliente.id %>" class="btn btn-warning">
                        Editar
                    </a>
                </td>
                <td>
                    <a href="/clientes/eliminar/<%= cliente.id %>" class="btn btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
            <% })%>
        </tbody>
    </table>
</div>
<%- include("../footer"); %>